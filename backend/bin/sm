#!/bin/bash

# Wrapper around snakemake to run it with common arguments

echo -e "Runing: \n\nsnakemake
    $@
    --cores 8
    --resources load=100 cpu=8
    --default-resources load=25 cpu=1\n\n"

snakemake \
    $@ \
    --cores 8 \
    --resources load=100 cpu=8 \
    --default-resources load=25 cpu=1
